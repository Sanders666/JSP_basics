<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.joonzis.mybatis.mapper.comment"> 
	
	<!-- 1. 댓글 삽입 -->
	<insert id="insert_comment" parameterType="org.joonzis.vo.CVO">
	    INSERT INTO comment_t (
	        c_idx,
	        writer,
	        content,
	        pw,
	        ip,
	        reg_date,
	        b_idx
	    )
	    VALUES (
		    comment_seq.NEXTVAL,
		    #{writer},
		    #{content},
		    #{pw},
		    #{ip},
		    sysdate,
		    #{b_idx}
		)
	</insert>
	
	<!-- 2. 댓글 목록 -->
	<select id="comm_select_by_b_idx" parameterType="int" resultType="org.joonzis.vo.CVO">
		SELECT * FROM COMMENT_T 
		WHERE B_IDX = #{b_idx}
		ORDER BY C_IDX ASC
	</select>
	
	<!-- 3. 댓글 삭제 -->
	<delete id="remove_comment" parameterType="int">
		DELETE FROM COMMENT_T WHERE C_IDX=#{c_idx}
	</delete>
	
	
</mapper>